<UserControl x:Class="DrinkServiceMain.ProjectorControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="auto" Width="auto" MaxWidth="800">
    <Grid Background="WhiteSmoke">
            <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Beurs fuif Projector" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"  FontSize="20" />
        <StackPanel Grid.Row="1">
            <TextBlock Width="auto" TextWrapping="Wrap"  Height="auto" Margin="5,5,5,5"  Text="De beursfuif projector is de applicatie die de grafieken toont aan de klanten." />
       </StackPanel>
        <Label Grid.Row="2" Content="Connecteer op:"/>
        <TextBox Grid.Row="2" Margin="90,0,0,0" Name="lblTimeLeft" Width="150" Text="127.0.0.1" HorizontalAlignment="Left"  />
        
        <Button Style="{StaticResource GreenButton}" Content="Start" FontSize="15" Grid.Row="5" Margin="0,0,0,0" HorizontalAlignment="Right" Height="30" Width="106" />
    </Grid>
</UserControl>
