<Application x:Class="DrinkServiceMain.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"             
    StartupUri="SimpleMain.xaml">
    <Application.Resources>
        <Style TargetType="Button" x:Key="GreenButton">          

        </Style>
        <Style TargetType="Button" x:Key="GreenButtonPressed">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="1,0" >
                        <GradientStop Color="#00FF00" Offset="0.0"/>
                        <GradientStop Color="#00AA00" Offset="1.0"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Button" x:Key="RedButton">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="1,0" >
                    <GradientStop Color="#AA0000" Offset="0.0"/>
                    <GradientStop Color="#FF0000" Offset="1.0"/>
                </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Button" x:Key="RedButtonPressed">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="1,0" >
                        <GradientStop Color="#FF0000" Offset="0.0"/>
                        <GradientStop Color="#AA0000" Offset="1.0"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
      
    </Application.Resources>
</Application>
