<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="Grid" x:Key="MainGrid">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="1,0" >
                    <GradientStop Color="#FFFFFF" Offset="0.0"/>
                    <GradientStop Color="#D4D4D4" Offset="0.05"/>
                    <GradientStop Color="#4A7849" Offset="0.20"/>
                    <GradientStop Color="#325232" Offset="0.9"/>
                    <GradientStop Color="#1B2B1A" Offset="1.0"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="Rectangle" x:Key="BarGrid">
        <Setter Property="Fill">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,1">
                    <GradientStop   Color="#578DC6" Offset="0"/>
                    <GradientStop Color="#FFFFFF" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>