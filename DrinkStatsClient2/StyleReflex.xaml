<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="Grid" x:Key="MainGrid">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="1,0" >
                    <GradientStop Color="#FFFFFF" Offset="0.0"/>
                    <GradientStop Color="#F8DB01" Offset="0.05"/>
                    <GradientStop Color="#E7A302" Offset="0.20"/>
                    <GradientStop Color="#E7A302" Offset="0.9"/>
                    <GradientStop Color="#C18300" Offset="1.0"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="Rectangle" x:Key="BarGrid">
        <Setter Property="Fill">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,1">
                    <GradientStop Color="#389CB5" Offset="0"/>
                    <GradientStop Color="#B5F0FF" Offset="1.0"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>    
</ResourceDictionary>