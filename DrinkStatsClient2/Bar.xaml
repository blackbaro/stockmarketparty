<UserControl x:Class="DrinkStatsClient2.Bar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="200" Width="60" Background="Transparent">
    <UserControl.Resources>
        
      
    </UserControl.Resources>
    <Grid>
        <Canvas>                
            <Rectangle Name="lblrectAngle" Style="{DynamicResource BarGrid}" Canvas.Bottom="0" Height="90" Width="60" />
               
            
            <Canvas Name="groupCanvas" Canvas.Bottom="8">
                <Label Name="lblDrinkName" FontSize="18" HorizontalContentAlignment="Center" FontWeight="Bold" Opacity="0.7"   Canvas.Bottom="50" Width="60" Height="34" Background="White" BorderBrush="Black" BorderThickness="1"  Content="Witte wijn"  Canvas.Left="0" />              
                
                <Label Name="lblPrice" FontSize="18" HorizontalContentAlignment="Center" FontWeight="Bold" Opacity="0.7"  Canvas.Bottom="20"  Width="60" Height="34" Content="1,3€" />
                <Label Name="lblCrash" FontSize="18" HorizontalContentAlignment="Center" FontWeight="Bold" Opacity="0.7" Canvas.Bottom="85"  Width="60"  Height="34"   Background="Red" Foreground="White"   Content="CRASH" />
            </Canvas>
        </Canvas>
    </Grid>
</UserControl>
